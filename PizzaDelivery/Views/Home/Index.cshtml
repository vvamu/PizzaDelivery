@{
    ViewData["Title"] = "Home Page";

}
@model ICollection<Pizza>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn this.</p>
    <a class="text-center" asp-action="GetOnlineFriends">Get online friends</a>

</div>

<div class="row">
    @if(Model.Count >= 0)
    {
        @foreach(var item  in Model)
        {
            <div class="row row-cols-1 col-md-4 text-center">
                <div class="col" style="padding: 10px;">
                    <div class="card">
                       <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.Ingridients</p>
                            <p class="carousel-dark">@item.Price</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else{
        <div>Emply list of pizzas</div>
    }
</div>

<form>
<input type="submit" value="Create default pizza" asp-action="CreateDefaultPizza" asp-controller="Home" />
</form>

